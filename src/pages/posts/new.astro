  }
  
  .form-group textarea {
    resize: vertical;
    min-height: 100px;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  }
  
  .form-group textarea#content {
    min-height: 400px;
  }
  
